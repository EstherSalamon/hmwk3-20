@model HomeViewModel

<div class="container mt-5">
    <div class="row">
        <h1>These are my @Model.Pictures.Count images</h1>
        <br>
        <div class="col-md-6 offset-3">
            <a href="/home/uploadpicture" class="btn btn-outline-success" style="width: 100px;">Upload</a>
            @foreach (var pic in Model.Pictures)
            {
                <div class="row mt-3">
                    <div class="card" style="width: 54rem;">
                        <a href="/home/viewimage?id=@pic.ID">
                            <img src="/uploads/@pic.Path" class="card-img-top">
                            <div class="card-body">
                                <h5 class="card-title">@pic.Title</h5>
                                <h3>Uploaded at: @pic.DateUploaded.ToLongDateString() @pic.DateUploaded.ToLongTimeString()</h3>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>